#!/usr/bin/env python
# coding=utf-8

from datetime import date, timedelta;

import click

@click.group(chain=True)
def cli():
    pass


@cli.command('gents')
def gents():
    click.echo(date.today().strftime('%Y/%m/%d * Gentlemans Baristas'))
    click.echo('    Expenses:Food:Coffee                                                        £2.70')
    click.echo('    Assets:Current:Mondo')
    click.echo('')

